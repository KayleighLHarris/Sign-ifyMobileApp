<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="136dp"
        android:layout_height="55dp"
        android:fontFamily="@font/alata"
        android:text="Sign-ify"
        android:textAlignment="center"
        android:textColor="#367A39"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="SignifyLogo"
        android:rotation="26"
        app:layout_constraintBottom_toTopOf="@+id/searchbarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.644"
        app:srcCompat="@drawable/signlanguageicon" />

    <SearchView
        android:id="@+id/searchbarView"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:background="#DDDBDB"
        android:radius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintVertical_bias="0.037" />

    <ImageButton
        android:id="@+id/genConvoBtn"
        android:layout_width="169dp"
        android:layout_height="169dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="528dp"
        android:background="@drawable/generalconversation"
        android:backgroundTint="#FFFFFF"
        android:onClick="openGenConvoActivity"
        android:radius="25dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleView"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/generalconversation" />

    <ImageButton
        android:id="@+id/directionsBtn"
        android:layout_width="169dp"
        android:layout_height="169dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="-135dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="openDirectActivity"
        android:radius="25dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/directions"
        />

    <ImageButton
        android:id="@+id/emotionsBtn"
        android:layout_width="169dp"
        android:layout_height="169dp"
        android:layout_marginTop="392dp"
        android:layout_marginEnd="-200dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="openEmotionsActivity"
        android:radius="25dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/searchbarView"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emotions"
        />

    <ImageButton
        android:id="@+id/numbersBtn"
        android:layout_width="169dp"
        android:layout_height="169dp"
        android:layout_marginTop="392dp"
        android:layout_marginEnd="-360dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="openNumbersActivity"
        android:radius="25dp"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toStartOf="@+id/emotionsBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/istockphoto_1328954686_170667a"
        />

    <ImageButton
        android:id="@+id/questionBtn"
        android:layout_width="169dp"
        android:layout_height="182dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="596dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="openQuestionsActivity"
        android:radius="25dp"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/questionsimage" />

    <ImageButton
        android:id="@+id/alphabetBtn"
        android:layout_width="169dp"
        android:layout_height="182dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="596dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="openAlphabetActivity"
        android:radius="25dp"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alphabet"
        />

    <TextView
        android:id="@+id/genConvoView"
        android:layout_width="169dp"
        android:layout_height="23dp"
        android:background="#8BC34A"
        android:backgroundTint="#85CF30"
        android:fontFamily="@font/alata"
        android:text="General Conversation"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="339dp" />

    <TextView
        android:id="@+id/directionsView"
        android:layout_width="169dp"
        android:layout_height="23dp"
        android:background="#8BC34A"
        android:backgroundTint="#85CF30"
        android:fontFamily="@font/alata"
        android:text="Directions"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="338dp" />

    <TextView
        android:id="@+id/emotionsView"
        android:layout_width="169dp"
        android:layout_height="23dp"
        android:background="#8BC34A"
        android:backgroundTint="#85CF30"
        android:fontFamily="@font/alata"
        android:text="Emotions"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="538dp" />

    <TextView
        android:id="@+id/questionsView"
        android:layout_width="169dp"
        android:layout_height="23dp"
        android:background="#8BC34A"
        android:backgroundTint="#85CF30"
        android:fontFamily="@font/alata"
        android:text="Questions"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="756dp" />

    <TextView
        android:id="@+id/alphabetView"
        android:layout_width="169dp"
        android:layout_height="23dp"
        android:background="#8BC34A"
        android:backgroundTint="#85CF30"
        android:fontFamily="@font/alata"
        android:text="Alphabet"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="756dp" />

    <TextView
        android:id="@+id/numbersView"
        android:layout_width="169dp"
        android:layout_height="23dp"
        android:background="#8BC34A"
        android:backgroundTint="#85CF30"
        android:fontFamily="@font/alata"
        android:text="Numbers"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="538dp" />

</androidx.constraintlayout.widget.ConstraintLayout>